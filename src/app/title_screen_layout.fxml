<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane fx:id="root"
            prefHeight="600.0"
            prefWidth="800.0"
            styleClass="opening-scene-background-pane"
            stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.TitleScreenController">
   <children>
      <TextFlow layoutX="90.0"
                layoutY="25.0"
                prefHeight="266.0"
                prefWidth="621.0"
                textAlignment="CENTER">
         <children>
            <Text id="title-screen-big-text" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Saharan Delirium" textAlignment="CENTER" wrappingWidth="625.09375">
               <effect>
                  <DropShadow />
               </effect>
            </Text>
         </children>
      </TextFlow>
      <VBox layoutX="259.0" layoutY="310.0" prefHeight="250.0" prefWidth="250.0">
         <children>
            <Button fx:id="newGameButton" mnemonicParsing="false" onAction="#onNewGameButtonClick" prefHeight="75.0" prefWidth="250.0" styleClass="title-screen-buttons" text="New Game" textFill="black">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="loadGameButton" mnemonicParsing="false" onAction="#onLoadGameButtonClick" prefHeight="75.0" prefWidth="250.0" styleClass="title-screen-buttons" text="Load Game" textFill="black">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="quitGameButton" mnemonicParsing="false" onAction="#onQuitGameButtonClick" prefHeight="75.0" prefWidth="250.0" styleClass="title-screen-buttons" text="Quit" textFill="black">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
